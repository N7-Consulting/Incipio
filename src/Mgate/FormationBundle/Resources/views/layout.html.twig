{# layout père du formation bundle #}
{% extends "::layout.html.twig" %}

{% block title %}
    {{ 'formation.formations'|trans({}, 'formation') }} - {{ parent() }}
{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                {% block content_title %}
                    {{ 'formation.formations'|trans({}, 'formation') }}
                {% endblock %}
            </h3>

            {% block breadcrumb %}
                <ul class="breadcrumb no-margin pull-right">
                    <li>
                        <a href="{{ path('Mgate_formations_lister') }}">
                            {{ 'formation.formations'|trans({}, 'formation') }}
                        </a>
                    </li>
                    {% block breadcrumb_items %}{% endblock %}
                    <li class="active">
                        {% block breadcrumb_active %}{% endblock %}
                    </li>
                </ul>
            {% endblock %}
        </div>

        <div class="box-body">
            {# On définit un nouveau block, que les vues du bundle pourront remplir #}
            {% block content_bundle %}
            {% endblock %}
        </div>

        <div class="box-footer"></div>
    </div>
{% endblock %}
