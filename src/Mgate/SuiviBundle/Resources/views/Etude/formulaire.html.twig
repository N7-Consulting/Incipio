{{ form_start(form) }}
{% form_theme form 'MgateSuiviBundle:Form:fields.html.twig' %}
<table class="table table-bordered table-striped standard">
    <tr>
        <th>{{ form_label(form.knownProspect) }} {{ form_errors(form.knownProspect) }}</th>
        <td>{{ form_widget(form.knownProspect) }}</td>
    </tr>
    <tr>
        <th id="{{ form.newProspect.vars.id }}_block" colspan="2" class="success">
            {{ 'suivi.etude_form.prospect_nouveau'|trans({}, 'suivi') }}
        </th>
    </tr>
    <tr>
        <th>{{ form_label(form.newProspect.nom) }} {{ form_errors(form.newProspect.nom) }}</th>
        <td>{{ form_widget(form.newProspect.nom) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.newProspect.entite) }} {{ form_errors(form.newProspect.entite) }}</th>
        <td>{{ form_widget(form.newProspect.entite) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.newProspect.adresse) }} {{ form_errors(form.newProspect.adresse) }}</th>
        <td>{{ form_widget(form.newProspect.adresse) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.newProspect.codepostal) }} {{ form_errors(form.newProspect.codepostal) }}</th>
        <td>{{ form_widget(form.newProspect.codepostal) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.newProspect.ville) }} {{ form_errors(form.newProspect.ville) }}</th>
        <td>{{ form_widget(form.newProspect.ville) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.newProspect.pays) }} {{ form_errors(form.newProspect.pays) }}</th>
        <td>{{ form_widget(form.newProspect.pays) }}</td>
    </tr>
    <tr>
        <th id="{{ form.newProspect.vars.id }}_block" colspan="2" class="success">
            {{ 'suivi.etude_l'|trans({}, 'suivi') }}
        </th>
    </tr>
    <tr>
        <th>{{ form_label(form.prospect) }} {{ form_errors(form.prospect) }}</th>
        <td>{{ form_widget(form.prospect) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.nom) }} {{ form_errors(form.nom) }}</th>
        <td>{{ form_widget(form.nom) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.description) }} {{ form_errors(form.description) }}</th>
        <td>{{ form_widget(form.description) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.mandat) }} {{ form_errors(form.mandat) }}</th>
        <td>{{ form_widget(form.mandat) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.num) }} {{ form_errors(form.num) }}
            <span class="badge badge-default" data-toggle="tooltip"
                  title="{{ 'suivi.etude_form.mandat_tooltip'|trans({}, 'suivi') }}">?</span>
        </th>
        <td>{{ form_widget(form.num) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.confidentiel) }} {{ form_errors(form.confidentiel) }}</th>
        <td>{{ form_widget(form.confidentiel) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.suiveur) }} {{ form_errors(form.suiveur) }}</th>
        <td>{{ form_widget(form.suiveur) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.suiveurQualite) }} {{ form_errors(form.suiveurQualite) }}</th>
        <td>{{ form_widget(form.suiveurQualite) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.domaineCompetence) }} {{ form_errors(form.domaineCompetence) }}</th>
        <td>{{ form_widget(form.domaineCompetence) }}</td>
    </tr>
    <tr>
        <th>{{ form_label(form.sourceDeProspection) }} {{ form_errors(form.sourceDeProspection) }}</th>
        <td>{{ form_widget(form.sourceDeProspection) }}</td>
    </tr>
</table>

{{ form_widget(form) }}

<input type="submit" value="{{ 'suivi.etude_enregistrer'|trans({}, 'suivi') }}" class="btn btn-success"/>
<input type="submit" value="{{ 'suivi.etude_enregistrer_passer_ap'|trans({}, 'suivi') }}" name="ap" id="ap"
       class="btn btn-success"/>

{{ form_end(form) }}

<script>
    {{ form_javascript(form) }}
    {% include "MgateSuiviBundle:DocType:selectOrNew.html.twig" with { known: form.knownProspect, knowned: form.prospect, newed: form.newProspect } %}
</script>
