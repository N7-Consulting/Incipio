{% extends "mgateSuiviBundle::layout.html.twig" %}

{% block title %}
	Modifier un Procès-Verbal - {{ parent() }}
{% endblock %}


{% block content_bundle %}

    <h2>Modifier un Procès-Verbal</h2>

<form method="post" {{ form_enctype(form) }}>

	{{ form_widget(form) }}

	<input type="submit" value="Enregistrer le Procès-Verbal" class="btn btn-success"/>
</form>



    <p>
        <a href="{{ path('mgateSuivi_procesverbal_voir', {'id': procesverbal.id}) }}" >Retour</a>
    </p>

    <form class="bootbox-confirm" data-content="Êtes-vous sûr de vouloir supprimer définitivement ce PV ?" action="{{ path('mgateSuivi_procesverbal_supprimer', { 'id_pv': form.vars.value.id }) }}" method="post">
    {{ form_widget(delete_form) }}
        <button>Supprimer le Procès-Verbal</button>
    </form>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ form_javascript(form) }}
    {% include "mgateSuiviBundle:DocType:selectOrNew.html.twig" with { known: form.knownSignataire2, knowned: form.signataire2, newed: form.newSignataire2 }%}
{% endblock %}
