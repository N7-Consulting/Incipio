{# layout d'accueil pour les Prospect  #}

{% extends "mgatePersonneBundle::layout.html.twig" %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block javascript_quick %}
{{ parent() }}
    <script src="{{ asset('js/jquery.dataTables.min.js')}}"></script>

    <script type="text/javascript" charset="utf-8">
            $(document).ready(function() {
                    $('#prospects').dataTable({
                        "bPaginate": false,
						"aaSorting": [[0,'desc']],
                    });
            } );
    </script>

{% endblock %}
{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatable.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatable_page.css') }}">
{% endblock %}

{% block content_bundle %}
<h2>Liste des Prospects</h2>

    <div>
        <a href="{{ path('mgatePersonne_prospect_ajouter') }}" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-plus"></span> Ajouter un prospect</a>
    </div>
    <table style="width: 100%;" aria-describedby="example_info" class="display dataTable table table-bordered table-striped" id="prospects" border="0" cellpadding="0" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Type</th>
			<th>Adresse</th>
            <th>Nombre d'employes</th>
          </tr>
        </thead>
        <tbody>
            {% for prospect in prospects %}
            <tr>
                <td><a href="{{ path('mgatePersonne_prospect_voir', {'id': prospect.id}) }}"> {{ prospect.nom }} </a></td>
                <td>{{ prospect.entiteToString }}</td>
                <td>{{ prospect.adresse }}</td>
                <td>{{ prospect.employes | length }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
