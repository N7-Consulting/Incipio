{% extends "mgateTresoBundle::layout.html.twig" %}

{% block title %}
    {{ 'treso.bv_modification'|trans({}, 'treso') }} - {{ parent() }}
{% endblock %}

{% block content_title %}
    {% if bv.numero is null %}
        {{ 'treso.bv_ajout'|trans({}, 'treso') }}
    {% else %}
        {{ 'treso.bv_unique_modification'|trans({}, 'treso') }} {{ bv.mandat }} -BV- {{ bv.numero }}
    {% endif %}
{% endblock %}

{% block content_bundle %}
    <form method="post" {{ form_enctype(form) }}>
        <table class="table table-bordered table-striped standard">
            <tr>
                <th>{{ form_label(form.mandat) }}</th>
                <td>{{ form_widget(form.mandat) }}</td>
                <th>{{ form_label(form.numero) }}</th>
                <td>{{ form_widget(form.numero) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.nombreJEH) }}</th>
                <td>{{ form_widget(form.nombreJEH) }}</td>
                <th>{{ form_label(form.remunerationBruteParJEH) }}</th>
                <td>{{ form_widget(form.remunerationBruteParJEH) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.numeroVirement) }}</th>
                <td>{{ form_widget(form.numeroVirement) }}</td>
                <th>{{ form_label(form.dateDeVersement) }}</th>
                <td>{{ form_widget(form.dateDeVersement) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.mission) }}</th>
                <td>{{ form_widget(form.mission) }}</td>
                <th>{{ form_label(form.typeDeTravail) }}</th>
                <td>{{ form_widget(form.typeDeTravail) }}</td>
            </tr>
            <tr>
                <th colspan="4">{{ 'treso.taux'|trans({}, 'treso') }}</th>
            </tr>
            <tr>
                <th>{{ form_label(form.dateDemission) }}</th>
                <td colspan="3">{{ form_widget(form.dateDemission) }}</td>
            </tr>
        </table>
        <input type="submit" class="btn btn-success" value="{{ 'treso.enregistrer'|trans({}, 'treso') }}"/>
        {{ form_rest(form) }}
    </form>

    <br>
    <div class="row">
        <div class="col-md-2 col-xs-4">
            <a href="{{ path('mgateTreso_BV_index') }}" class="btn btn-default">{{ 'treso.bv_list_retour'|trans({}, 'treso') }}</a>
        </div>
        {% if bv.numero is not null %}
            <div class="col-md-2 col-xs-4">
                <a href="{{ path('mgateTreso_BV_voir', {'id': form.vars.data.id}) }}" class="btn btn-info">{{ 'treso.bv_retour'|trans({}, 'treso') }}</a>
            </div>
            <div class="col-md-2 col-xs-4">
                <a href="{{ path('mgateTreso_BV_supprimer', {'id': bv.id}) }}" class="btn btn-danger">
                    {{ 'treso.bv_supprimer'|trans({}, 'treso') }}
                </a>
            </div>
        {% endif %}

    </div>


{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
