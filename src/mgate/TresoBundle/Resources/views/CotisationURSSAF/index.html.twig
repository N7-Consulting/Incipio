{% extends "mgateTresoBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatables/dataTables.bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/dataTables.fontAwesome.css') }}">
    <link rel="stylesheet" href="{{ asset('css/datatables/responsive.bootstrap.min.css') }}">
{% endblock %}

{% block title %}
    Gestion des Cotisation URSSAF - {{ parent() }}
{% endblock %}

{% block content_bundle %}
    <a href="{{ path('mgateTreso_CotisationURSSAF_ajouter') }}" class="btn btn-success">Ajouter une cotisation
        URSSAF</a>
    <table class="display dataTable table table-bordered table-striped dt-responsive" id="listeCotisations">
        <thead>
        <tr>
            <th>Action</th>
            <th>Applicable du</th>
            <th>Applicable au</th>
            <th>Libelle</th>
            <th>Taux Part Junior</th>
            <th>Taux Part Etudiant</th>
            <th>Applicable sur la base</th>
            <th>Est déductible ?</th>
        </tr>
        </thead>
        {% for cotisation in cotisations %}
            <tr style="text-align: right;" class="{{ cotisation.dateFin < date() ? 'danger' : 'success' }}">
                <td><a href="{{ path('mgateTreso_CotisationURSSAF_modifier', {'id' : cotisation.id }) }}"
                       title="Modifier"><span class="fa fa-pencil"></span></a></td>
                <td>{{ cotisation.dateDebut | date('d/m/Y') }}</td>
                <td>{{ cotisation.dateFin | date('d/m/Y') }}</td>
                <td>{{ cotisation.libelle }}</td>
                <td>{{ (cotisation.tauxPartJE * 100) | money(false) }}</td>
                <td>{{ (cotisation.tauxPartEtu * 100) | money(false) }}</td>
                <td>
                    <span class="label label-{{ cotisation.isSurBaseURSSAF ? 'success' : 'warning' }}">Base {{ cotisation.isSurBaseURSSAF ? "URSSAF" : "Brut" }}</span>
                </td>
                <td>
                    <span class="label label-{{ cotisation.deductible ? 'success' : 'danger' }}">{{ cotisation.deductible ? "" : "Non" }}
                        déductible</span></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}

{% block javascript %}
    {{ parent() }}
<script src="{{ asset('js/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('js/datatables/dataTables.bootstrap.min.js') }}"></script>
<script src="{{ asset('js/datatables/dataTables.responsive.min.js') }}"></script>
<script src="{{ asset('js/datatables/responsive.bootstrap.min.js') }}"></script>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $('#listeCotisations').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "iDisplayLength": 50,
            "aaSorting": [[1, 'desc']]
        });
    });
</script>

{% endblock %}