{% extends 'Project/layout.html.twig' %}

{% block title %}
	{{ 'dashboard.cca'|trans({}, 'dashboard') }}
	{{ parent() }}
{% endblock %}

{% block content_title %}
	{{ 'suivi.cca_bdc_relation'|trans({}, 'project') }} {{ prospect }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/datatables/dataTables.bootstrap.css') }}">
	<link rel="stylesheet" href="{{ asset('css/datatables/dataTables.fontAwesome.css') }}">
	<link rel="stylesheet" href="{{ asset('css/datatables/responsive.bootstrap.min.css') }}">
{% endblock %}

{% block breadcrumb_items %}
	{{parent()}}
	<li>
		<a href="{{ path('project_cca_voir') }}">{{ 'dashboard.cca'|trans({}, 'dashboard') }}</a>
	</li>
{% endblock %}

{% block breadcrumb_active %}
	{{ 'suivi.bon_de_commande'|trans({}, 'project') }}
{% endblock %}


{% block content_bundle %}

	<div id="myTabContent" class="tab-content">
		<table class="display dataTable table table-bordered table-striped dt-responsive" id="bdctable">
			<thead>
				<tr>
					<th>{{ 'suivi.etude_nom'|trans({}, 'project') }}</th>
					<th>{{ 'suivi.date_signature' | trans({}, 'project') }}</th>
					<th>{{ 'suivi.date_fin' | trans({}, 'project') }}</th>
					<th>{{ 'suivi.statut' | trans({}, 'project') }}</th>
				</tr>
			</thead>
      <tbody>
			{% for bdc in bdcs %}
        <tr>
          <td>{{ bdc.etude.nom }}</td>
					<td>{{ bdc.dateSignature | date('d/m/Y')}}</td>
					<td>{{ bdc.etude.getDateFin | date('d/m/Y')}}</td>
          <td>{{ bdc.etude.getStateIDToString(bdc.etude.stateID) | trans({}, 'project') }}</td>
				</tr>
			{% endfor %}
      </tbody>
		</table>
	</div>
{% endblock %}

{% block javascript %}
	{{ parent() }}
	<script src="{{ asset('js/datatables/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset('js/datatables/dataTables.bootstrap.min.js') }}"></script>
	<script src="{{ asset('js/datatables/dataTables.responsive.min.js') }}"></script>
	<script src="{{ asset('js/datatables/responsive.bootstrap.min.js') }}"></script>

	<script type="text/javascript" charset="utf-8">
		$(document).ready(function () {
			$('#bdctable').dataTable({
			"bPaginate": true,
			"bSort": true,
			"order": [],
			});
		});
	</script>
{% endblock %}
