{% if contacts | length %}
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>{{ 'rh.contact'|trans({}, 'rh') }}</th>
				<th>{{ 'rh.date'|trans({}, 'rh') }}</th>
				<th>{{ 'rh.fait_par'|trans({}, 'rh') }}</th>
				<th>{{ 'rh.objet'|trans({}, 'rh') }}</th>
				<th>{{ 'rh.resume'|trans({}, 'rh') }}</th>
				<th>{{ 'rh.type'|trans({}, 'rh') }}</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in contacts %}
				<tr>
					<td>
						<a href="{{ path('alumni_contact_modifier', {'id': contact.id}) }}">{{ 'rh.contact'|trans({}, 'rh') }}
							{# nÂ°{{etude.clientContacts | length - loop.index0}}</a> #}
							{{ contact.alumnus.PrenomNom }}</a>
					</td>
					<td>
						{{contact.date | date("d/m/Y") }}
					</td>
					<td>
						{{ contact.faitPar.PrenomNom }}
					</td>
					<td>
						{{ contact.objet }}
					</td>
					<td>
						{{ contact.contenu  | nl2br }}
					</td>
					<td>
						{{contact.moyenContact}}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
	{{ 'rh.pas_de_contact'|trans({}, 'rh') }}
{% endif %}
