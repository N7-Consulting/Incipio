{# Layout principal pour la gestion des documents #}
{% extends "base.html.twig" %}



{% block content %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">
                {% block content_title %}
                    {{ 'gestiondoc.gestiondoc'|trans({}, 'gestiondoc') }}
                {% endblock %}
            </h3>
            {% block breadcrumb %}
                <ul class="breadcrumb no-margin pull-right">
                    <li>{{ 'gestiondoc.gestiondoc'|trans({}, 'gestiondoc') }}</li>
                    {% block breadcrumb_items %}{% endblock %}
                    <li class="active">
                        {% block breadcrumb_active %}{% endblock %}
                    </li>
                </ul>
            {% endblock %}
        </div>
        <div class="box-body">
            {# On d√©finit un nouveau block, que les vues du bundle pourront remplir #}
            {% block content_bundle %}
            {% endblock %}
        </div>
        <div class="box-footer"></div>
    </div>

{% endblock %}
