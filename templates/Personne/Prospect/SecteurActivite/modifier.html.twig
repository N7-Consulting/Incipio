{% extends "Personne/layout.html.twig" %}

{% block title %}
        {{ 'prospect.secteur_activite'|trans({}, 'personne') }} {{ parent() }}
{% endblock %}

{% block content_title %}
        {{ 'prospect.secteur_activite'|trans({}, 'personne') }}
{% endblock %}

{% block content_bundle %}
    <div class="table-responsive content">
        {{ form_start(form) }}
        <table class="table table-bordered table-striped">
            <tr>
                <th>{{ form_label(form.intitule) }}</th>
                <td>{{ form_widget(form.intitule) }} {{ form_errors(form.intitule) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.description) }}</th>
                <td>{{ form_widget(form.description) }} {{ form_errors(form.description) }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="row">
                        <div class="col-md-2 col-xs-4">
                            <button type="submit" class="btn btn-success">{{ 'generique.enregistrer'|trans({}, 'personne') }}</button>
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                        <div class="col-md-2 col-xs-4">
                            <form class="bootbox-confirm inline"
                                data-content="{{ 'prospect.confirmation_supprimer_secteur'|trans({}, 'personne') }}"
                                action="{{ path('secteur_activite_supprimer', { 'id': form.vars.value.id }) }}" method="post">
                                {{ form_widget(delete_form) }}
                                <button class="btn btn-danger">{{ 'prospect.supprimer_secteur'|trans({}, 'personne') }}</button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}

